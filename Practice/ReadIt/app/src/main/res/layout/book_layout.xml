<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/book_card"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/book_name_txt"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author_name_txt"
            android:layout_below="@+id/book_name_txt"
            android:text="Written by : "
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pages_text"
            android:text="Pages : "
            android:layout_below="@id/author_name_txt"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_below="@+id/pages_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/book_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/short_description_txt"
            android:layout_below="@id/book_image"
            android:layout_marginTop="10dp"
            android:text="Short Description :"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>